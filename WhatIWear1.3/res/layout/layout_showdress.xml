<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center_horizontal"
            android:layout_marginLeft="7dp"
            android:layout_margin="10dp"
    >
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

                <!--cap-->
            <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imgbtt_capLeft"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_column="0"
                    android:background="@drawable/icon_arrow_left"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginBottom="0px"
                    android:id="@+id/img_cap"
                    android:minWidth="100dp"
                    android:minHeight="100dp"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:layout_column="1"/>
            <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imgbtt_capRight"
                    android:layout_margin="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/icon_arrow_right"
                    android:maxWidth="15dp"
                    android:maxHeight="15dp"
            />

            <!-- bag (on the same line)-->
            <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imgbtt_bagLeft"
                    android:layout_marginLeft="25dp"
                    android:layout_margin="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_column="0"
                    android:background="@drawable/icon_arrow_left"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginTop="0px"
                    android:id="@+id/img_bag"
                    android:minWidth="100dp"
                    android:minHeight="100dp"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:layout_column="1"/>
            <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imgbtt_bagRight"
                    android:layout_margin="2dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_arrow_right"
            />
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--shirt-->
            <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imgbtt_shirtLeft"
                    android:layout_marginLeft="25dp"
                    android:layout_margin="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_column="0"
                    android:background="@drawable/icon_arrow_left"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginTop="0px"
                    android:id="@+id/img_shirt"
                    android:minWidth="75dp"
                    android:minHeight="100dp"
                    android:maxWidth="75dp"
                    android:maxHeight="100dp"
                    android:layout_column="1"/>
            <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imgbtt_shirtRight"
                    android:layout_margin="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/icon_arrow_right"
            />

            <!--sweatshirt (on the same line)-->
            <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imgbtt_sweatshirtLeft"
                    android:layout_marginLeft="100dp"
                    android:layout_margin="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_column="0"
                    android:background="@drawable/icon_arrow_left"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginTop="0px"
                    android:id="@+id/img_sweatshirt"
                    android:minWidth="100dp"
                    android:minHeight="150dp"
                    android:maxWidth="100dp"
                    android:maxHeight="150dp"
                    android:layout_column="1"/>
            <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imgbtt_sweatshirtRight"
                    android:layout_margin="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/icon_arrow_right"
            />
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <!--pants-->
            <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imgbtt_pantsLeft"
                    android:layout_marginLeft="25dp"
                    android:layout_margin="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_column="0"
                    android:background="@drawable/icon_arrow_left"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginTop="0px"
                    android:id="@+id/img_pants"
                    android:minWidth="100dp"
                    android:minHeight="150dp"
                    android:maxWidth="100dp"
                    android:maxHeight="150dp"
                    android:layout_column="1"/>
            <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imgbtt_pantsRight"
                    android:layout_margin="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/icon_arrow_right"
            />

            <!--jacket (on the same line)-->
            <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imgbtt_jacketLeft"
                    android:layout_marginLeft="100dp"
                    android:layout_margin="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_column="0"
                    android:background="@drawable/icon_arrow_left"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginTop="0px"
                    android:id="@+id/img_jacket"
                    android:minWidth="100dp"
                    android:minHeight="150dp"
                    android:maxWidth="100dp"
                    android:maxHeight="150dp"
                    android:layout_column="1"/>
            <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imgbtt_jacketRight"
                    android:layout_margin="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/icon_arrow_right"
                    android:maxWidth="15dp"
                    android:maxHeight="15dp"
            />
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        </TableRow>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Space
                    android:layout_width="170dp"
                    android:layout_height="fill_parent"
            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btt_again"
                    android:id="@+id/btt_again"
                    android:layout_margin="2dp"
                    android:layout_column="3"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btt_ok"
                    android:layout_margin="2dp"
                    android:id="@+id/btt_ok" android:layout_column="4"/>
        </LinearLayout>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        </TableRow>
    </TableLayout>
</LinearLayout>